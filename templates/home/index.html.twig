{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <br/>
    <div class="container">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100"
                         src="{{ asset ('images/carousel/lastofus.jpg') }}"
                         alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Précommandez dès maintenant !</h5>
                        <p>Sortie prévue le 29 mai 2020</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100"
                         src="{{ asset ('images/carousel/warzone.jpg') }}"
                         alt="Second slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Rejoignez le combat !</h5>
                        <p>Disponible sur notre boutique</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100"
                         src="{{ asset ('images/carousel/ps5.jpg') }}"
                         alt="Third slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Découvrez la nouvelle console par Sony !</h5>
                        <p>Sortie prévue fin 2020</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <br/>
        <div class="row justify-content-center">
            <h2>Nos derniers produits</h2>
        </div>
        <br/>
        <div class="row text-center">
            {% for produit in produits %}
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card">
                        <div class="parent">
                            <img class="card-img-top padding resize" src="{{ asset('images/produits/' ~ produit.idImage.chemin ~ '.' ~ produit.idImage.idTypeImage.libelle) }}">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">{{ produit.idProduit.libelle }}</h5>
                            <h5>{{ produit.idProduit.prixht }} €</h5>
                        </div>
                        <div class="card-footer">
                            <a class="card-text btn btn-primary btn-sm"
                               href={{ path('produit', { 'id' : produit.idProduit.id}) }}>Détails</a>
                            &nbsp;
                            <a class="btn btn-success btn-sm" href="{{ produit.idProduit.id }}">Ajouter au panier</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <tr>
                    <td colspan="6">Aucun nouveau produit</td>
                </tr>
            {% endfor %}
        </div>
    </div>
{% endblock %}