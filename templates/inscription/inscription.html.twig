                                <div class="col form-group">
                                    <label for="verifnom">Nom</label>
                                    <input type="text" class="form-control" id="verifnom" placeholder="Nom" name="nom"
                                           required>
                                    <div class="invalid-feedback">
                                        Nom non saisi
                                    </div>
                                </div>
                                <div class="col form-group">
                                    <label for="verifprenom">Prénom</label>
                                    <input type="text" class="form-control" id="verifprenom" placeholder="Prénom"
                                           name="prenom" required>
                                    <div class="invalid-feedback">
                                        Prénom non saisi
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col form-group" id="divparent">
                                    <label for="verifcourriel">Courriel</label>
                                    <input type="email" class="input-courriel form-control" id="verifcourriel"
                                           placeholder="Courriel" name="courriel" required>
                                    <div class="invalid-feedback" id="erreurcoourriel">
                                        Courriel non saisie
                                    </div>
                                    <small class="form-text text-muted"><span id="etat"></span>Nous ne partagerons
                                        jamais votre courriel.</small>
                                </div>
                                <div class="col form-group">
                                    <label for="veriftel">Téléphone</label>
                                    <input type="text" class="form-control" id="veriftel" placeholder="06.xx.xx.xx.xx"
                                           name="numero_telephone" minlength="10" maxlength="10" required>
                                    <div class="invalid-feedback">
                                        Numéro de téléphone non saisi
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col form-group">
                                    <label for="verifdate">Date de naissance</label>
                                    <input type="date" class="form-control" id="verifnom" placeholder=""
                                           name="date_naissance" required>
                                    <div class="invalid-feedback">
                                        Date de naissance non saisie
                                    </div>
                                </div>
                            </div>
