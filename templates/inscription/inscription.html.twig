                            <div class="form-row">
                                <div class="col form-group">
                                    <label for="verifmdp">Saisir votre mot de passe</label>
                                    <input type="password" class="form-control" id="verifmdp" placeholder="********"
                                           name="mdp" onkeyup="taillemdp()" minlength="6" required>
                                    <div class="invalid-feedback" id="longueurmdp">
                                        Mot de passe non saisi
                                    </div>
                                </div>
                                <div class="col form-group">
                                    <label for="verifmdpconf">Confirmer du mot de passe</label>
                                    <input type="password" class="form-control" id="verifmdpconf" placeholder="********"
                                           name="confmdp" minlength="6" required>
                                    <div class="invalid-feedback" id="correspondancemdp">
                                        Mot de passe de confirmation non saisi
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="customCheck" required>
